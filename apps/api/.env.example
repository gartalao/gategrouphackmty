# Smart Trolley API Environment Variables
# Copy this file to .env and fill in the actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database (Neon Postgres)
# Get this from: https://console.neon.tech/app/projects/YOUR_PROJECT_ID
DATABASE_URL=postgresql://smart_trolley_user:YOUR_PASSWORD@ep-YOUR-ENDPOINT.us-east-1.aws.neon.tech/smart_trolley_db?sslmode=require

# OpenAI Vision API
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Storage Configuration
STORAGE_DIR=./storage/scans

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Optional: Advanced Configuration
MAX_IMAGE_SIZE_MB=10
VISION_MODEL=gpt-4o-mini
VISION_TIMEOUT_MS=15000
DB_POOL_MAX=10
SCAN_RETENTION_DAYS=7

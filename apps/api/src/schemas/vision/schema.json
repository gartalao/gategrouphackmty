{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "description": "Lista de productos detectados en la imagen",
      "items": {
        "type": "object",
        "required": ["sku", "quantity", "confidence"],
        "properties": {
          "sku": {
            "type": "string",
            "description": "C칩digo SKU del producto (debe existir en cat치logo)",

# Smart Trolley Mobile App Environment Variables
# Copy this file to .env and fill in the actual values

# Backend API URL (use your computer's IP address, not localhost)
# Find your IP with: ifconfig | grep "inet " | grep -v 127.0.0.1
EXPO_PUBLIC_API_URL=http://192.168.1.100:3001/api

# Scan Configuration
EXPO_PUBLIC_SCAN_INTERVAL_MS=5000
EXPO_PUBLIC_IMAGE_QUALITY=0.80
EXPO_PUBLIC_IMAGE_MAX_WIDTH=1280

# For production, use your deployed API URL:
# EXPO_PUBLIC_API_URL=https://api.smarttrolley.com/api
